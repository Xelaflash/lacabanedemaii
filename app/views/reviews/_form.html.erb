
<%= simple_form_for([ produit, review ], remote: true) do |form| %>
  <%= form.error_notification %>
  <%= form.collection_radio_buttons :rating,
  [[1, icon('fas', 'star')],
  [2, icon('fas', 'star') + icon('fas', 'star')],
  [3, icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star')],
  [4, icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star')],
  [5, icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star') + icon('fas', 'star')]],
:first,
:last, :checked => [5] %>
  <%= form.input :author, label: "Votre nom", required: true, autofocus: true %>
  <%= form.input :content, label: "Votre commentaire", required: true %>
  <%= form.input :recommend, as: :boolean, unchecked_value: false, checked_value: true, label: "Oui, je recommande ce produit"%>
  <%= form.button :submit, "Valider", class: "btn btn-avis btn-block" %>
<% end %>
