<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <h2>S'inscrire</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "bob@gmail.com" %>
        <%= f.input :prenom, required: true, autofocus: true, placeholder: "Bob"%>
        <%= f.input :nom, required: true, autofocus: true, placeholder: "Eponge" %>
        <%= f.input :adresse, required: true, autofocus: true, placeholder: "21 rue des champs 75005 Paris" %>
        <%= f.input :telephone, autofocus: true, placeholder: "+33600000000"  %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "•••••••••" %>
        <%= f.input :password_confirmation, required: true, placeholder: "•••••••••" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    </div>
  </div>
</div>
