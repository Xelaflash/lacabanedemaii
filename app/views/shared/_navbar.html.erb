<div class="navbar-wagon">
  <div class="logo">
    <%= link_to root_path, class: "logo" do %>
      <%= image_tag "logo.jpg"%>
    <% end %>
  </div>

  <div class="hidden-xs">
    <div class="form-group">
        <%= render 'shared/search', query: params[:search] %>
    </div>
  </div>

    <% if user_signed_in? %>
    <div class="navbar-wagon-right">
      <div class="cart-text">
        <%= render "shared/cart_text" %>
      </div>

      <div class="right hidden-xs hidden-sm">
        <%= link_to t(".profile", default: "Mon compte"),edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to t(".sign_out", default: "Déconnexion"),destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
        <p class="delivery">Frais de port offerts à partir de 50 €</p>
      </div>
    </div>

    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to t(".profile", default: "Mon compte"),edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to t(".sign_out", default: "Déconnexion"),destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      </div>
    </div>

  <% else %>
        <!-- Login link (when logged out) -->
    <div class="navbar-wagon-right">
      <div class="cart-text">
        <%= render "shared/cart_text" %>
      </div>

      <div class="right hidden-xs hidden-sm">
        <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <p class="delivery">Frais de port offerts à partir de 50 €</p>
      </div>
    </div>

    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <div class="form-group hidden-sm">
              <%= render 'shared/search', query: params[:search] %>
            </div>
          </li>
          <li><%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>

        </ul>
    <% end %>
      </div>
    </div>
  </div>
