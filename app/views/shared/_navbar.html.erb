<div class="navbar-wagon">

  <div class="hidden-xs">
    <div class="form-group">
        <%= render 'shared/search', query: params[:query] %>
    </div>
  </div>

    <!-- Logo -->
    <div class="logo">
      <%= link_to root_path, class: "logo" do %>
      <%= image_tag "logo.jpg"%>
    <% end %>
    </div>


    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <% if user_signed_in? %>
        <div class="right">
          <%= link_to t(".profile", default: "Mon compte"),edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <!-- to put in a dropdown with arrow -->
          <%= link_to t(".sign_out", default: "Déconnexion"),destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
          <p class="delivery">Frais de port offerts à partir de 50 €</p>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <div class="right">
          <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to t(".sign_in", default: "S'inscrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <p class="delivery">Frais de port offerts à partir de 50 €</p>
      <% end %>
        </div>
    </div>

    <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if current_user == nil %>
              <li>
                <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"%>
              </li>
              <li>
                <%= link_to t(".sign_in", default: "S'inscrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link"%>
              </li>
            <% else %>
            <li><%= link_to t(".profile", default: "Mon compte"),edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
            <li><%= link_to t(".sign_out", default: "Déconnexion"),destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link"%></li>
          <% end %>
        </ul>
      </div>
    </div>
</div>
